<h1>Editing Book</h1>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

	<label>Title</label>
	<%= f.text_field :title %>

	<label>Body</label>
	<%= f.text_area :body %>

	<%= f.submit 'Update Book' %>
	<% end %>

	<%= link_to"Edit",edit_book_path(@book.id) %>
	|
	<a class="back" href="/books">Back
	</a>